<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h2 class="alert-secondary p-3">Weather Forecast</h2>
            </div>
        </div>
        <div class="mt-2">
            <hr />
        </div>
        <div class="row text-center">
            <div class="col-md-3 d-sm-none d-md-block"></div>
            <div class="col-sm-6 col-md-3 mx-md-auto">
                <div type="button" class="btn btn-lg btn-success p-4 mt-1 mb-1" onclick="city_form()">From name of a Province or District</div>
            </div>
            <div class="col-sm-6 col-md-3 mx-md-auto">
                <div type="button" class="btn btn-lg btn-success p-4 mt-1 mb-1" onclick="location_form()">From Latitude and Longitude Coordinates</div>       
            </div>
            <div class="col-md-3 d-sm-none d-md-block"></div>
        </div>
        <div class="row mt-2">
            <hr />
        </div>
        <div class="row" id="city" style="display: none;">
            <div class="col-sm-6 mx-auto">
                <form action="/api/city" id="form_city" class="form text-center">
                    <div class="form-group">
                        <label for="city">Province or District of Laos</label>
                        <select name="city" id="city" class="form-control ml-2">
                            <option value="">Vientiane</option>
                            <% lists.forEach(function(list){%>
                                <option value="<%= list.name %>"><%= list.name %></option>
                            <%})%>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mb-2 m-3">Forecast</button>
                </form>
            </div>
        </div>
        <div class="row" id="location" style="display: none;">
            <div class="col-6 mx-auto">
                <form action="/api/coordinate" id="form_location" class="text-center">
                    <div class="form-group">
                        <label for="lon">Longitude</label>
                        <input type="number" name="lon" step="0.0001" class="form-control" id="lon" placeholder="0.0000">
                    </div>
                    <div class="form-group">
                        <label for="lat">Latitude</label>
                        <input type="number" name="lat" step="0.0001" class="form-control" id="lat" placeholder="0.0000">
                    </div>
                    <button type="submit" class="btn btn-primary m-3">Forecast</button>
                </form>
            </div>
        </div>
    </div>
    <script>
        function city_form(){
            document.getElementById("city").style.display="block"
            document.getElementById("location").style.display="none"
        }
        function location_form(){
            document.getElementById("city").style.display="none"
            document.getElementById("location").style.display="block"
        }
    </script>
</body>
</html>